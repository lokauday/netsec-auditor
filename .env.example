# Application Settings
APP_ENV=local
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/netsec_auditor

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS Settings (comma-separated list or JSON array)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# OpenAI API (Optional - for enhanced AI security audit)
# Leave empty or omit to use rule-based audit only
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# API Authentication (Optional - leave empty to disable authentication)
# If set, required for: upload, parse, audit, and report endpoints
API_KEY=

